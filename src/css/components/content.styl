.content {
  background-color: white;
  box-shadow: 0 1px 3px alpha(black, 10%);

  &__inner {
    display: flex;
  }

  &__left {
    width: calc(100% - 259px);
  }
  &__right {
    width: 258px;
    padding: 30px;
    border-left: 1px solid $c_gray;
  }

  &__faq {
    padding: 30px;

    &-question {
      display: block;
      font-size: 22px;
      color: $c_text;
      line-height: 1.3;
      transition: 0.2s ease-out;
      cursor: pointer;

      &:not(:last-child) {
        margin-bottom: 17px;
      }

      &:hover {
        color: $c_red;
      }
    }
  }

  &__more {
    font-size: 16px;
    font-weight: 500;
    color: $c_text;
    text-align: center;
    border-top: 1px solid $c_gray;
    padding: 25px 30px;
    cursor: pointer;
    transition: 0.2s ease-out;

    &:hover {
      color: $c_red;
    }
  }
}