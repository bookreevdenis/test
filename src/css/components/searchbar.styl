.searchbar {
  //

  &__inner {
    width: 100%;
    display: flex;
    justify-content: space-between;

    &-left {
      width: calc(100% - 216px);
    }
    &-right {
      width: 199px;
    }
  }

  &__input {
    width: 100%;
    flex-shrink: 0;
    position: relative;

    &-field {
      width: 100%;
      border: 2px solid #dfe3e4;
      padding: 11px 20px 7px 36px;

      &::-webkit-input-placeholder {color:#7d7d80; transition: 0.2s ease-in-out}
      &::-moz-placeholder          {color:#7d7d80; transition: 0.2s ease-in-out}/* Firefox 19+ */
      &:-moz-placeholder           {color:#7d7d80; transition: 0.2s ease-in-out}/* Firefox 18- */
      &:-ms-input-placeholder      {color:#7d7d80; transition: 0.2s ease-in-out}

      &:focus {
        &::-webkit-input-placeholder {color: alpha(#7d7d80, 0%)}
        &::-moz-placeholder          {color: alpha(#7d7d80, 0%)}/* Firefox 19+ */
        &:-moz-placeholder           {color: alpha(#7d7d80, 0%)}/* Firefox 18- */
        &:-ms-input-placeholder      {color: alpha(#7d7d80, 0%)}
      }
    }

    &-loupe {
      width: 20px;
      height: 20px;
      position: absolute;
      top: calc(50% - 10px);
      left: 8px

      svg {
        width: 100%;
        height: 100%;
        fill: #e4e8e8;
      }
    }
  }

  &__select {
    width: 100%;
  }
}