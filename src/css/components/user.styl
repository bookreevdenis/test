.user {
  display: flex;
  align-items: center;

  &__photo {
    width: 50px;
    height: 50px;
    margin-right: 12px;
    position: relative;

    img {
      display: block;
      width: 100%;
      height: 100%;
    }

    &:after {
      content: '';
      position: absolute;
      border-right: 10px solid $c_dark;
      border-top: 10px solid alpha($c_dark, 0%);
      border-bottom: 10px solid alpha($c_dark, 0%);
      top: -10px;
      right: 0;
    }

    &:before {
      content: '';
      position: absolute;
      border-left: 10px solid $c_dark;
      border-top: 10px solid alpha($c_dark, 0%);
      border-bottom: 10px solid alpha($c_dark, 0%);
      bottom: -10px;
      left: 0;
    }
  }

  &__name {
    font-size: 15px;
    font-weight: 500;
    color: white;
    line-height: 1.2;
  }
}