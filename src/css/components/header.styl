.header {
  background-color: $c_dark;

  &__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1240px;
    height: 78px;
    margin: 0 auto;
  }

  &__logo {
    width: 203px;
    height: 28px;

    svg {
      width: 100%;
      height: 100%;
      fill: $c_red;
    }
  }

  &__search {
    cursor: pointer;
    &-icon {
      width: 26px;
      height: 26px;

      svg {
        width: 100%;
        height: 100%;
        fill: white;
        transition: 0.2s ease-out;
      }

      &:hover {
        svg {
          fill: $c_red;
        }
      }
    }
  }

  &__user {
    width: 215px;
    cursor: pointer;
  }
}