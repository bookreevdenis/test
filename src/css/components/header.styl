.header {
  background-color: $c_dark;

  &__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1240px;
    height: 78px;
    margin: 0 auto;
  }

  &__logo {
    width: 203px;
    height: 28px;

    svg {
      width: 100%;
      height: 100%;
      fill: $c_red;
    }
  }

  &__search {
    cursor: pointer;
    &-icon {
      width: 26px;
      height: 26px;

      svg {
        width: 100%;
        height: 100%;
        fill: white;
        transition: 0.2s ease-out;
      }

      &:hover {
        svg {
          fill: $c_red;
        }
      }
    }
  }

  &__user {
    width: 215px;
    cursor: pointer;
  }

  &__notif {
    position: relative;
    cursor: pointer;

    &-bell {
      width: 20px;
      height: 29px;
      position: relative;
      z-index: 1;

      svg {
        width: 100%;
        height: 100%;
        fill: white;
      }
    }

    &-count {
      width: 18px;
      height: 18px;
      font-size: 11px;
      font-weight: 500;
      color: white;
      background-color: $c_red;
      border: 2px solid $c_dark;
      border-radius: 50%;
      position: absolute;
      bottom: -8px;
      right: -7px;
      z-index: 2;
      padding: 3px 0 0 3px;
    }
  }
}