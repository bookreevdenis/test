.el-radio {
  position: relative;
  user-select: none;

  input {
    width: 0;
    height: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    visibility: hidden;

    &:checked + label:before {
      border: 4px solid $c_red;
    }
  }

  label {
    font-size: 15px;
    color: $c_text;
    cursor: pointer;
    padding-left: 30px;

    &:before {
      content: '';
      box-sizing: border-box;
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid #dfe3e4;
      border-radius: 50%;
      position: absolute;
      top: -1px;
      left: 0;
      transition: 0.2s ease-out;
    }
  }
}